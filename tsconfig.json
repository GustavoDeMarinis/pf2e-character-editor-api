{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    // "outDir": "./build",
    "rootDir": "./src",
    "noErrorTruncation": true
  },
  "include": ["src"]
}
